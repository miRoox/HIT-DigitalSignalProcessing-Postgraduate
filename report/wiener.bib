
@article{_radon_2011,
	title = {一种改进的基于Radon变换的运动模糊图像参数估计方法},
	volume = {40},
	issn = {1007-2276},
	abstract = {运动模糊是导致图像降质的最常见因素之一。此类图像的复原很大程度上取决于对点扩散函数的准确估计。对于匀速直线运动的模糊图像,运动方向和模糊尺度是确定点扩散函数的两个关键参数。介绍了Radon变换的数学原理及用其估计运动模糊方向的思路、步骤;针对实际拍摄的模糊图像频谱中严重影响原算法的十字亮线现象,分析了其成因,并提出了一种改进算法。算法根据十字亮线的特性,采用频谱分块的思想以消除检测干扰。实验结果验证了算法的正确性和有效性。},
	pages = {963--969},
	number = {5},
	journaltitle = {红外与激光工程},
	author = {乐, 翔 and 程, 建 and 李, 民},
	date = {2011},
	keywords = {点扩散函数, 图像处理, 先验模糊辨识, image processing, point spread function, prior blur identification, Radon transform, Radon变换}
}

@article{_rgb_2019,
	title = {基于{RGB通道自适应的维纳滤波图像去模糊研究}},
	volume = {27},
	issn = {1671-4598},
	abstract = {图像去模糊是针对当图像受到模糊,复原出期望的清晰图像的过程;由于图像受到模糊的程度及过程未知,很难利用精确的模糊核对图像进行复原;同时要考虑到图像的三个通道在受到模糊时的影响不一致,对维纳滤波复原图像进行了研究,提出一种基于{RGB三通道下自适应的维纳滤波图像去模糊技术研究};首先对图像进行模糊核估计,求出模糊核,然后将图像分为有限个图像块,对图像进行降维,最后,通过求出的模糊核应用到维纳滤波模型中,进行图像复原;与现有的方法比较,基于{RGB通道自适应的维纳滤波图像去模糊研究的方法能够得到更好的恢复效果},并有效的抑制了边界出现的振铃现象。},
	pages = {215--219+238},
	number = {11},
	journaltitle = {计算机测量与控制},
	author = {孙, 成阳 and 毛, 家发 and 胡, 亚红 and 盛, 伟国},
	date = {2019},
	keywords = {复原图像, 模糊核, 图像去模糊, 维纳滤波, blurring kernel, Image deblurring, restoring image, {RGB图像三通道}, {RGBthree}-channel, Wiener filtering}
}

